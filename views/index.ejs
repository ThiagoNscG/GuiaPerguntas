<%- include ("partials/header.ejs") %>
<body>
    <%- include ("partials/navbar.ejs") %>
    <div class="container">
        <br>
            <div class="d-flex justify-content-center"><h1><p>Qual sua dúvida?</p></h1></div>
            <div class="d-flex justify-content-center"><a href="/perguntar" class="btn btn-primary">FAÇA SUA PERGUNTA</a>
            </div>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><p><%= pergunta.titulo %></p></h3>
                </div>
                <div class="card-footer">
                   <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-primary">Responder</button></a>
                </div>
            </div>
        <% }) %>

    </div>

</body>
<%- include ("partials/footer.ejs") %>
